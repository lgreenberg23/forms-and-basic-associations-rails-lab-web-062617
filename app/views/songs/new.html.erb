<h1>Create a Song</h1>

<%= form_for @song do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  Artist Name <%= f.text_field :artist_name %><br>
  Genre Name <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: true %><br>
  Note Content <%= f.text_field :note_contents, name: 'song[note_contents][]', id: "song_notes_1"%><br>
  Note Content <%= f.text_field :note_contents, name: 'song[note_contents][]', id: "song_notes_2" %><br>
  Note Content <%= f.text_field :note_contents, name:'song[note_contents][]', id: "song_notes_3" %><br>

  <%= f.submit %>
<% end %>